def a_function():  
        print("im a function!") # creates a function to print a string
        y = "string"
        print("I make a %s"% y)
def another_function():
        
        z = "strings"

        print("and i am another function!") #also prints a string
        print("I make %s"% z)
        print(z)

def a_username_and_pass(username, password): # sets up a function for two vars
       print("hello %s your password is %s"
% (username, password))       


def sum_two_numbers(a, b):
    return a + b

x = 1

if x == 1:  # is true so it will run functions
    a_function()
    another_function()

username = "tony"         #vars are listed
password = "hello world"

a_username_and_pass(username,password)
#print out function with vars 

x = 2   #vars are relisted

if x    == 1:   # is    false
       a_function()
else:                   #is true so it will run functions
       another_function() #calls other_function
       print(sum_two_numbers(2, 3)) #prints out function with vars
       #prints 2 + 3 = 5


